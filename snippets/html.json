{
	// Basic tags
	"img": {
		"prefix": "img",
		"body": [
			"<img src=\"$1\" ${2:alt=\"$3\" }/>",
			"$0"
		]
	},
	"a": {
		"prefix": "a",
		"body": [
			"<a href=\"$1\"${2: class=\"$3\"}${4: target=\"${5:_blank}\"}>$6</a>$0",
		]
	},
	"div": {
		"prefix": "div",
		"body": [
			"<div class=\"$1\">",
			"  $0",
			"</div>"
		]
	},

	// Temporary "about-me" page snippets
	"Timeline item": {
		"prefix": "tim",
		"body": [
			"<li class=\"timeline-item\">",
			"  <div class=\"timeline-date\">$1</div>",
			"  <div class=\"timeline-content\">",
			"    $0",
			"  </div>",
			"</li>"
		]
	},
	"Carousel": {
		"prefix": "car",
		"body": [
			"<div class=\"carousel\"",
			"     data-flickity='{ \"wrapAround\": true,",
			"								 			 \"fullscreen\": true,",
			"								 			 \"lazyLoad\": true,",
			"								 			 \"pageDots\": false }'>",
			"  ${0:cel}",
			"</div>"
		]
	},
	"Carousel cell": {
		"prefix": "cel",
		"body": [
			"<div class=\"carousel-cell\">",
			"  <img class=\"carousel-image\" data-flickity-lazyload=\"$1\" />",
			"</div>",
			"$0"
		]
	},
	"Timeline Period": {
		"prefix": "per",
		"body": [
			"<div class=\"timeline-period\">",
			"	<h2>$0</h2>",
			"</div>"
		]
	}
}
